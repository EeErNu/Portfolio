{% extends 'layout.html.twig' %}

{% block body %}
  <h1>Companies list</h1>

  <div class="row posts">
    {% for company in companies %}
      <div class="col-md-4">
        <div class="card">
          <div style="background-image: {{ asset('/assets/images/' ~ company.image) }}">
            <img class="card-img-top" src="{{ asset('/assets/images/' ~ company.image) }}">
          </div>
          <div class="card-body">
            <ul>
              <li>Id <a href="{{ path('company_show_admin', { 'id': company.id }) }}">{{ company.id }}</a></li>
              <li>Name {{ company.name }}</li>
              <li>Location {{ company.location }}</li>
              <li>Start {% if company.start %}{{ company.start|date('Y-m-d') }}{% endif %}</li>
              <li>Finish {% if company.finish %}{{ company.finish|date('Y-m-d') }}{% endif %}</li>
              {#<li>Description {{ company.description }}</li>#}
              <li>Position {{ company.position }}</li>
            </ul>

            <p class="card-text">{{ company.description[:200] ~ '...' }}</p>
            <a href="{{ path('company_show', { 'id': company.id }) }}" class="btn btn-success">
              <i class="fa fa-eye"></i>
              Show more
            </a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <h1>Universities list</h1>

  <div class="row posts">
    {% for university in universities %}
      <div class="col-md-4">
        <div class="card">
          <div style="background-image: {{ asset('/assets/images/' ~ university.image) }}">
            <img class="card-img-top" src="{{ asset('/assets/images/' ~ university.image) }}">
          </div>
          <div class="card-body">
            <ul>
              <li>Id <a href="{{ path('company_show_admin', { 'id': university.id }) }}">{{ university.id }}</a></li>
              <li>Name {{ university.name }}</li>
              <li>Location {{ university.location }}</li>
              <li>Start {% if university.start %}{{ university.start|date('Y-m-d H:i:s') }}{% endif %}</li>
              <li>Finish {% if university.finish %}{{ university.finish|date('Y-m-d H:i:s') }}{% endif %}</li>
              {#<li>Description {{ university.description }}</li>#}
              <li>Field {{ university.field }}</li>
              <li>Specialization {{ university.specialization }}</li>
              <li>Degree {{ university.degree }}</li>
              <li>Grade {{ university.grade }}</li>
            </ul>

            <p class="card-text">{{ university.description[:200] ~ '...' }}</p>
            <a href="{{ path('university_show', { 'id': university.id }) }}" class="btn btn-success">
              <i class="fa fa-eye"></i>
              Show more
            </a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <h1>Volunteers list</h1>

  <div class="row posts">
    {% for volunteer in volunteers %}
      <div class="col-md-4">
        <div class="card">
          <div style="background-image: {{ asset('/assets/images/' ~ volunteer.image) }}">
            <img class="card-img-top" src="{{ asset('/assets/images/' ~ volunteer.image) }}">
          </div>
          <div class="card-body">
            <ul>
              <li>Id <a href="{{ path('volunteer_show_admin', { 'id': volunteer.id }) }}">{{ volunteer.id }}</a></li>
              <li>Organization {{ volunteer.organization }}</li>
              <li>Role {{ volunteer.role }}</li>
              <li>Cause {{ volunteer.cause }}</li>
              <li>Start {% if volunteer.start %}{{ volunteer.start|date('Y-m-d') }}{% endif %}</li>
              <li>Finish {% if volunteer.finish %}{{ volunteer.finish|date('Y-m-d') }}{% endif %}</li>
              <li>Description {{ volunteer.description }}</li>
            </ul>

            <p class="card-text">{{ volunteer.description[:200] ~ '...' }}</p>
            <a href="{{ path('volunteer_show', { 'id': volunteer.id }) }}" class="btn btn-success">
              <i class="fa fa-eye"></i>
              Show more
            </a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

{% endblock %}
