{% extends 'headerAdmin.html.twig' %}

{% block body %}
    <h1>Award</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ award.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ award.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if award.date %}{{ award.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ award.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('about') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
