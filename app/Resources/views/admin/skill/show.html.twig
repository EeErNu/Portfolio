{% extends 'headerAdmin.html.twig' %}

{% block body %}
  <h1>Skill</h1>

  <table>
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ skill.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ skill.name }}</td>
    </tr>
    <tr>
      <th>Score</th>
      <td>{{ skill.score }}</td>
    </tr>
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('skill_index_admin') }}">{{ 'button_back'|trans }}</a>
    </li>
    <li>
      <a href="{{ path('skill_edit_admin', { 'id': skill.id }) }}">{{ 'button_edit'|trans }}</a>
    </li>
    <li>
      {{ form_start(delete_form) }}
      <input type="submit" value="Delete">
      {{ form_end(delete_form) }}
    </li>
  </ul>
{% endblock %}
