{% extends 'headerAdmin.html.twig' %}

{% block body %}
    <h1>Volunteer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ volunteer.id }}</td>
            </tr>
            <tr>
                <th>Organization</th>
                <td>{{ volunteer.organization }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ volunteer.role }}</td>
            </tr>
            <tr>
                <th>Cause</th>
                <td>{{ volunteer.cause }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if volunteer.start %}{{ volunteer.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Finish</th>
                <td>{% if volunteer.finish %}{{ volunteer.finish|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ volunteer.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('about_admin_admin') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('volunteer_edit_admin', { 'id': volunteer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
