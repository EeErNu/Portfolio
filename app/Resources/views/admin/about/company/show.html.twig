{% extends 'headerAdmin.html.twig' %}

{% block body %}
    <h1>Company</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ company.location }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if company.start %}{{ company.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Finish</th>
                <td>{% if company.finish %}{{ company.finish|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ company.description }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ company.position }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('about_admin') }}">{{ 'button_back'|trans }}</a>
        </li>
        <li>
            <a href="{{ path('company_edit_admin', { 'id': company.id }) }}">{{ 'button_edit'|trans }}</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
