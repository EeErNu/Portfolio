{% extends 'headerAdmin.html.twig' %}

{% block body %}
  <h1>Awards list</h1>
  <a class="btn btn-success" href="{{ path('award_new_admin') }}">{{ 'button_create'|trans }}</a>

  <div class="row posts">
    {% for award in awards %}
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <ul>
              <li>Id <a href="{{ path('award_show_admin', { 'id': award.id }) }}">{{ award.id }}</a></li>
              <li>Name {{ award.name }}</li>
              <li>Date {% if award.date %}{{ award.date|date('Y-m-d') }}{% endif %}</li>
              <li>Description {{ award.description }}</li>
            </ul>

            <p class="card-text">{{ award.description[:200] ~ '...' }}</p>
            <a href="{{ path('award_show_admin', { 'id': award.id }) }}" class="btn btn-success">
              <i class="fa fa-eye"></i>
              {{ 'button_show'|trans }}
            </a>
            <a href="{{ path('award_edit_admin', { 'id': award.id }) }}" class="btn btn-danger">
              <i class="fa fa-edit"></i>
              {{ 'button_edit'|trans }}
            </a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

{% endblock %}
