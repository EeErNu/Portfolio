{% extends 'headerAdmin.html.twig' %}

{% block body %}
    <h1>Goal</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ goal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ goal.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ goal.description }}</td>
            </tr>
            <tr>
                <th>Added</th>
                <td>{% if goal.added %}{{ goal.added|date('Y-m-d H:i:s') }}{% endif %}</td>

            </tr>
            <tr>
                <th>Done</th>
                <td>{% if goal.done %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('goal_index_admin') }}">{{ 'button_back'|trans }}</a>
        </li>
        <li>
            <a href="{{ path('goal_edit_admin', { 'id': goal.id }) }}">{{ 'button_edit'|trans }}</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
