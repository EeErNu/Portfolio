{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Skills list</h1>

    <canvas class="myChart" width="200" height="200"></canvas>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Score</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td><a href="{{ path('skill_show', { 'id': skill.id }) }}">{{ skill.id }}</a></td>
                <td class="skill-name" data-is-named="{{ skill.name }}">{{ skill.name }}</td>
                <td class="skill-score" data-is-scored="{{ skill.score }}">{{ skill.score }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('skill_show', { 'id': skill.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('skill_edit', { 'id': skill.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('skill_new') }}">Create a new skill</a>
        </li>
    </ul>
{% endblock %}
